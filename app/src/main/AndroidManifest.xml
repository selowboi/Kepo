<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kepo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kepo">
        <activity android:name=".activity.InsertUpdateActivity"/>
        <activity android:name=".activity.ProfileActivity" />
        <activity android:name=".activity.DetailUserActivity" />
        <activity android:name=".activity.SearchUserActivity" />
        <activity android:name=".activity.SearchTodoActivity" />
        <activity android:name=".activity.DetailTodoActivity" />
        <activity android:name=".activity.MyTodoActivity" />
        <activity android:name=".activity.HomeActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>